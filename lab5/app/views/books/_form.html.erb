<%= form_with(model: book, local: true) do |f| %>
  <% if book.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% book.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= label_tag :author_names, "Authors (comma separated)" %>
    <%= text_field_tag :author_names, @book.authors.map(&:name).join(", "), list: "author-list", class: "form-control" %>
    <datalist id="author-list">
      <% Author.pluck(:name).uniq.each do |name| %>
        <option value="<%= name %>">
      <% end %>
    </datalist>
  </div>

  <div class="mb-3">
    <%= label_tag :genre_names, "Genres (comma separated)" %>
    <%= text_field_tag :genre_names, @book.genres.map(&:name).join(", "), list: "genre-list", class: "form-control" %>
    <datalist id="genre-list">
      <% Genre.pluck(:name).uniq.each do |name| %>
        <option value="<%= name %>">
      <% end %>
    </datalist>
  </div>


  <%= f.submit 'Save', class: "btn btn-primary" %>
<% end %>
